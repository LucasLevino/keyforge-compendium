<h1>My Categories</h1>

<table class="table table-striped table-dark">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Decks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.decks_users.count %></td>
        <td>
          <%= edit_path(edit_category_path(category)) %>
          <%= delete_path category_path(category), "category" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
