<% description "Forgot your password? Enter your email to reset it." %>

<section class="kfc__pagehead">
    <h1><%= title 'Forgot your password?' %></h1>
    <p>Enter your email you signed up with to reset your password</p>
</section>

<section class="kfc__user kfc__user--forgot">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Enter Email Address' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Reset Password', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</section>