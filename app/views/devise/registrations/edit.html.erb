<section class="kfc__pagehead">
  <h1><%= title 'Edit account details' %></h1>
</section>

<section class="kfc__user kfc__user--signup">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= bootstrap_devise_error_messages! %>


    <%= f.input :email %>
    <%= f.input :username, placeholder: "LogosLover4Ever" %>
    <%= f.input :favourites_public, hint: "By enabling this other people can look-up your decks based on username or id: #{fav_deck_url(f.object)}" %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>

    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

      <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
    </div>

    <div class="form-group">
      <%= f.submit t('.update'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <p><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>

  <%= link_to t('.back'), :back %>
</section>
